<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <% form.label :user_id, style: "display: block" %>
    <%= form.number_field :user_id, id: :category_user_id, class:"form-control", value: current_user.id, type: :hidden %>
  </div>

  <div class="mx-6">
    <% form.label :name, required: true, style: "display: block" %>
    <%= form.text_field :name, class:"form-control", placeholder:"Name" %>
  </div>
  <br />
  <br />
  <div class="mx-6">
    <% form.label :icon, required: true, style: "display: block" %>
    <%= form.file_field :icon, direct_upload: true, class:"form-control", placeholder:"Icon" %>
  </div>
  <br />
  <div class="mx-6">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
