<%= form_with(model: [@category, @category.records.create]) do |form| %>
  <% if record.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(record.errors.count, "error") %> prohibited this record from being saved:</h2>

      <ul>
        <% record.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <% form.label :user_id, style: "display: block" %>
    <%= form.number_field :user_id, id: :record_user_id, class:"form-control", value: current_user.id, type: :hidden %>
  </div>

  <div class="mx-6">
    <% form.label :name, style: "display: block" %>
    <%= form.text_field :name, class:"form-control", placeholder:"Name" %>
  </div>
  <br />
  <div class="mx-6">
    <% form.label :amount, style: "display: block" %>
    <%= form.text_field :amount, class:"form-control", placeholder:"Amount" %>
  </div>
  <br />
  <div class="mx-6">
    <% form.label :category, style: "display: block" %>
    <%= form.text_field :category, value:@category.name, class:"form-control" %>
  </div>
  <br />
  <div class="mx-6">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>

